  <% @bookings.each do |booking| %>
    <% if current_user == booking.user || current_user.admin?%>

      <div class="card mb-3 booking-card" style="max-width: 540px;">

          <%= link_to booking, class: "text-decoration-none" do %>
            <div class="row g-0">


              <!-- LOOP -->
              <% @flats.each do |flat| %>
                <% if flat.id == booking.flat_id %>
                  <!-- image -->

                    <%= cl_image_tag flat.photos[0].key, class: "img-fluid image" %>

                  <!-- end image -->
                  <!-- details -->
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title"><%= flat.address %></h5>
                      <p class="card-text"><small class="text-muted"><%= booking.check_in %> - <%= booking.check_out %></small></p>
                    </div>
                  </div>
                  <!-- details -->
                <% end %>
              <% end %>
