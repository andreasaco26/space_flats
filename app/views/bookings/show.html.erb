<!-- <h1>Showing one single booking</h1> -->
<div class="container pb-4 pt-4 d-flex">
<%= link_to '<i class="fas fa-arrow-left"></i> Back'.html_safe, bookings_path, class: "text-decoration-none" %>
</div>
<div class="container pb-4 pt-4 d-flex justify-content-center">



  <!-- <h2 class="featurette-heading">The user id for this booking is <%= @booking.user_id %></h2> -->

  <div class="card" style="width: 40rem;">


    <!-- image -->

     <div id="carouselExampleControls" class=" carousel carousel-booking slide s" data-ride="carousel">
  <div class="carousel-inner">
  <% @flat.photos.each do |photo| %>


    <div class="carousel-item active">
      <%= cl_image_tag photo.key, class: 'd-block' %>
    </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>

</div>
<!-- card body -->
    <div class="card-body">
      <h5 class="card-title"><%= @flat.address %></h5>
    </div>
 <!-- card list -->
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Check in: <%= @booking.check_in %></li>
      <li class="list-group-item">Check out: <%= @booking.check_out %></li>
    </ul>


    <!-- card body -->
    <div class="card-body">
       <p class="card-text"><%= @flat.description %></p>
    </div>


    <div class="card-body">
    <%= link_to '<i class="fas fa-edit"></i> Edit'.html_safe, edit_booking_path(@booking), class: "btn btn-sm btn-outline-secondary" %>
    <%= link_to '<i class="fas fa-trash-alt"></i> Delete'.html_safe, @booking, class:"btn btn-sm btn-outline-secondary", method: :delete, data: { confirm: 'Are you sure?' } %>

    </div>
  </div>


  <%# form for bookings %>
 </div>
