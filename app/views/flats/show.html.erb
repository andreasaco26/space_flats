

<div class="container d-flex justify-content-around">

  <div class="jumbotron mt-5 w-50">

    <h1 class="display-4"><%= @flat.address %></h1>

    <hr class="my-4">
    <p><%= @flat.description %></p>
    <p class="lead">

    </p>
  </div>




    <div class="form-booking mt-5 ">

        <%= simple_form_for [@flat, @booking] do |f| %>
          <form class="justify-content-center" >
            <div class="mb-3">
                <%= f.input  :check_in, as: :string,  input_html: { id: 'start-date'} %>

            </div>
            <div class="mb-3">
              <%= f.input  :check_out, as: :string, input_html: {id: 'end-date'} %>

            </div>



            <%= f.submit "Book", class: "btn btn-primary w-100" %>

        </form>

        <% end %>
     </div>
 </div>


  <div id="carouselExampleControls" class="carousel slide s" data-ride="carousel">
  <div class="carousel-inner">
  <% @flat.photos.each do |photo| %>


    <div class="carousel-item active">
      <%= cl_image_tag photo.key, height: 100, width: 100, class: 'd-block' %>
    </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
