







 <div class="container">
      <h4 class="text-center"id="notice"><%= notice %></h4>
   <div class="container pt-4 pb-4">

       <div class="row justify-content-center">
        <div class="class col-sm-8 pt-4">
            <%= form_tag flats_path, method: :get do %>
              <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                placeholder: "Find a flat"
              %>

              <%= submit_tag "Search", class: "btn btn-sm btn-outline-secondary mt-2" %>
            <% end %>
        </div>
       </div>

   </div>
    <div class="">



      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          <% @flats.each do |flat| %>
          <div class="col">
            <div class="card shadow-sm border-0 img-round">
            <%= cl_image_tag flat.photos[0].key, width: 350, height: 200, crop: :fill, class: "bd-placeholder-img card-img-top rounded-top" %>
                      <div class="card-body">
                          <h4 class="text-center"> <%= flat.address %></h4>
                          <%# <p class="card-text">The ID  <%= flat.id</p> %>
                          <p class="card-text"> <%= flat.description.truncate(100) %></p>
                          <p class="card-text"> <%= flat.price %> <i class="fas fa-euro-sign"></i> <i class="fas fa-moon"></i></p>
                          <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">

                                      <%= link_to flat, class:"btn btn-sm btn-outline-secondary m-1 border-0"  do%>
                                        <i class="fas fa-info-circle"></i>
                                      <% end %>
                                        <% if policy(flat).edit? %>
                                      <%= link_to  edit_flat_path(flat), class:"btn btn-sm btn-outline-secondary m-1 border-0" do%>
                                        <i class="fas fa-edit"></i>
                                      <% end %>
                                          <% end %>
                                            <% if policy(flat).destroy? %>
                                      <%= link_to flat, class:"btn btn-sm btn-outline-secondary m-1 border-0", method: :delete, data: { confirm: 'Are you sure?' } do%>
                                        <i class="fas fa-trash-alt"></i>
                                      <% end %>
                                          <% end %>
                              </div>
                            </div>

                    </div>

            </div>
          </div>
          <%end  %>
        </div>
      </div>

  </div>
