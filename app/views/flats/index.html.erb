




  <div class="album py-5 bg-light">



 <div class="container">
      <h4 class="text-center"id="notice"><%= notice %></h4>
   <div class="container pt-4 pb-4">

       <div class="row justify-content-center">
        <div class="class col-sm-8 pt-4">
            <%= form_tag flats_path, method: :get do %>
              <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                placeholder: "Find a flat"
              %>
              <br>
              <%= submit_tag "Search", class: "btn btn-primary" %>
            <% end %>
        </div>
       </div>

   </div>
    <div class="">
      


      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          <% @flats.each do |flat| %>
          <div class="col">
            <div class="card shadow-sm">
            <%= cl_image_tag flat.photos[0].key, width: 400, height: 300, crop: :fill, class: "bd-placeholder-img card-img-top" %>
            <%#<svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title><%= article.title%>
              <%# </title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg> %>

                      <div class="card-body">
                          <h4 class="text-center"> <%= flat.address %></h4>
                          <%# <p class="card-text">The ID  <%= flat.id</p> %>
                          <p class="card-text"> <%= flat.description.truncate(100) %></p>
                          <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">

                                      <%= link_to 'Details', flat, class:"btn btn-sm btn-outline-secondary m-1" %>
                                        <% if policy(flat).edit? %>
                                      <%= link_to 'Edit', edit_flat_path(flat), class:"btn btn-sm btn-outline-secondary m-1" %>
                                          <% end %>
                                            <% if policy(flat).destroy? %>
                                      <%= link_to 'Destroy', flat, class:"btn btn-sm btn-outline-secondary m-1", method: :delete, data: { confirm: 'Are you sure?' } %>
                                          <% end %>
                              </div>
                            </div>

                    </div>

            </div>
          </div>
          <%end  %>
        </div>
      </div>

  </div>

